@model BCore.Models.ViewModels.LoginViewModel

<div class="row">
    <div class="hidden-xs col-sm-2 col-md-3"></div>

    <div class="col-xs-12 col-sm-8 col-md-6">
        <h1>Log in</h1>
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="text-error" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.UserName"></label><br />
                <input class="form-control" asp-for="@Model.UserName" />
                <span class="text-error" asp-validation-for="@Model.UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label><br />
                <input class="form-control" asp-for="@Model.Password" />
                <span class="text-error" asp-validation-for="@Model.Password"></span>
            </div>
            <div class="form-group">

                <div class="checkbox">
                    <label asp-for="@Model.RememberMe">
                        <input asp-for="@Model.RememberMe" type="checkbox" />
                        Remember me
                    </label>
                </div>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Log in" />
            </div>
        </form>
    </div>

    <div class="hidden-xs col-sm-2 col-md-3"></div>
</div>
