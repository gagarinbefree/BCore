@using Microsoft.AspNetCore.Identity
@using BCore.Dal.Ef;

@model BCore.Models.ViewModels.WhatsNewViewModel
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@*----------WhatsNew----------*@
<div class="row">
    <div class="hidden-xs col-sm-2 col-md-3"></div>

    <div class="col-xs-12 col-sm-8 col-md-6">
        @{            
            await Html.RenderPartialAsync("_WhatsNew", Model);
        }
    </div>

    <div class="hidden-xs col-sm-2 col-md-3"></div>
</div>

@*----------Feed----------*@
<div class="row">
    <div class="hidden-xs col-sm-2 col-md-3"></div>

    <div class="col-xs-12 col-sm-8 col-md-6">
        @{
            await Html.RenderPartialAsync("_Feed", Model);
        }
    </div>

    <div class="hidden-xs col-sm-2 col-md-3"></div>
</div>

@{
    await Html.RenderPartialAsync("_Image");
}

@if (SignInManager.IsSignedIn(User))
{
    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function() {
                new Blog.WhatsNew("@UserManager.GetUserId(User)");               
            });
        </script>
    }
}