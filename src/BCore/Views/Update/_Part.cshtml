@model BCore.Models.ViewModels.Blog.PartViewModel

<div class="margin-top">
    @if (Model.PartType == 0)
    {

        @if (Model.IsStrong)
        {
            <h2><text hashing-text="@Model.Value"></text></h2>
        }
        else
        {
            <div><text hashing-text="@Model.Value"></text></div>
        }

    }
    else if (Model.PartType == 1)
    {
        <img class="img-responsive" src="@Model.Value" />
    }
</div>

<input asp-for="@Model.Id" type="hidden" />
<input asp-for="@Model.Value" type="hidden" />
<input asp-for="@Model.PartType" type="hidden" />


